@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
       @* <script type="text/javascript" src="~/Scripts/tinymce/tiny_mce.js"></script>
        <script type="text/javascript">
            tinymce.init({
               selector: "textarea"
           });
           $('submit').click(function () {
               tinyMCE.triggerSave();
           });*@
        </script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/Scripts/js")
        <div class="row" >
               <div class="span11" align="right">
                   <section id="login">
                      @Html.Partial("_LoginPartial")
                   </section>
               </div>
               <p></p>
        </div>
         <div class="container">
                <div class="float-center">
                    <p class="site-title"><img src="~/Images/logo2.png"></p>
                </div>
        </div>
        
    </head>
    <body>
        <header>
        <div class="navbar-cap">
          <div class="navbar">
            <div class="navbar-inner" >
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    
                        <ul class="nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Cheese", "Index", "Cheese")</li>
                                <li>@Html.ActionLink("Meat", "Index", "Meat")</li>
                                <li>@Html.ActionLink("Misc. Product", "Index", "Misc")</li>
                                <li>@Html.ActionLink("Special", "", "")</li>
                                <li>@Html.ActionLink("Platter", "", "")</li>
                                <li>@Html.ActionLink("News", "Index", "News")</li>
                                <li>@Html.ActionLink("About Us", "About", "")</li>
                                <li>@Html.ActionLink("Contact Us", "Contact", "")</li>
                        </ul>
                    </div>
                 </div>
                </div>
            </div>
           </div>
        
        </header>   

        <div id="body">   
        <div class="container">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderSection("featured", required: false)
            <div class="hero-unit">
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
            <footer>
                <div class="float" align="center">
                    <p> Copyright © @DateTime.Now.Year Cheese-World. All rights reserved.</p>
                </div>
            </footer> 
        </div>
         @Scripts.Render("~/js")
         @RenderSection("Scripts", required: false)
       </div>
    </body>
</html>

